{% extends 'base.html.twig' %}

{% block title %}Przypominanie hasła{% endblock %}

{% block body %}
    <center><h2>
    <form method="post">

        

        <fieldset>
            <div class="form-group">
                <label for="input_login">Login</label>
                <input type="text" style="width: 50%;" class="form-control" name="login" id="input_login" aria-describedby="emailHelp" placeholder="Login">
            </div>
            
            <div class="form-group">
                <label for="input_question">Wybierz pytanie</label>
                <select class="form-control" style="width: 50%;" id="input_question">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                </select>
            </div>

            <div class="form-group">
                <label for="question_answer">Odpowiedź</label>
                <input type="text" style="width: 50%;" class="form-control" name="question_answer" id="question_answer" aria-describedby="emailHelp" placeholder="Odpowiedź">
            </div>
  
            <button type="submit" class="btn btn-primary">Przypomnij hasło</button>
        </fieldset>
    </form>
    </h2></center>
{% endblock %}
