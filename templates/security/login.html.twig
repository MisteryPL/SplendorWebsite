{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <center><h2>
    <form method="post">
        <fieldset>
            <div class="form-group">
                <label for="input_login">Login</label>
                <input type="text" style="width: 40%;" value="{{ last_username }}" class="form-control" name="login" id="input_login" aria-describedby="emailHelp" placeholder="Login">
            </div>
            
            <div class="form-group">
                <label for="input_password">Hasło</label>
                <input type="password" style="width: 40%;" class="form-control" name="password" id="input_password" placeholder="Hasło">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <button type="submit" class="btn btn-primary btn-lg">Zaloguj się</button>
        </fieldset>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

    </form></br>

<a class="btn btn-primary btn-lg" href="{{ path('recovery') }}" role="button"> Zapomniałeś hasła? </a>
<a class="btn btn-primary btn-lg" href="{{ path('app_register') }}" role="button"> Zarejestruj się </a> 
    </h2></center>
{% endblock %}
