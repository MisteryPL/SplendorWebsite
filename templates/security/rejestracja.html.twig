{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    <center><h2>
    <form method="post">
        <fieldset>
            <div class="form-group">
                <label for="input_email">Email address</label>
                <input type="email" style="width: 50%;" class="form-control" name="input_email" id="input_email" aria-describedby="emailHelp" placeholder="Przykład: splendor@mail.com">
            </div>

            <div class="form-group">
                <label for="input_login">Login</label>
                <input type="text" style="width: 50%;" class="form-control" name="input_login" id="input_login" aria-describedby="emailHelp" placeholder="Login">
            </div>

            <div class="form-group">
                <label for="input_username">Nazwa użytkownika</label>
                <input type="text" style="width: 50%;" class="form-control" name="input_username" id="input_username" aria-describedby="emailHelp" placeholder="Nazwa użytkownika">
            </div>
            
            <div class="form-group">
                <label for="input_password">Hasło</label>
                <input type="password" style="width: 50%;" class="form-control" name="input_password" id="input_password" placeholder="Hasło">
            </div>

            <div class="form-group">
                <label for="input_question">Pytanie pomocnicze do odzyskiwania hasła</label>
                <select class="form-control" style="width: 50%;" id="input_question" name="input_question">
                    <option>Twój ulubiony film?</option>
                    <option>Nazwisko panieńskie matki?</option>
                    <option>Twoja ulubiona książka?</option>
                    <option>Twój wzrost?</option>
                </select>
            </div>

            <div class="form-group">
                <label for="input_answer">Odpowiedź</label>
                <input type="text" style="width: 50%;" class="form-control" name="input_answer" id="input_answer" placeholder="Odpowiedź">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Zarejestruj</button>
        </fieldset>
    </form>
    </h2></center>
{% endblock %}